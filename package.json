{
  "name": "spending-tracker",
  "version": "1.0.0",
  "description": "Personal spending tracking application",
  "main": "server/index.js",
  "bin": {
    "spending-tracker": "server/index.js"
  },
  "pkg": {
    "scripts": "server/**/*.js",
    "assets": "client/**/*",
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist"
  },
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "package": "pkg . --out-path dist",
    "package-win": "pkg . --targets node18-win-x64 --out-path dist",
    "package-mac": "pkg . --targets node18-macos-x64 --out-path dist",
    "package-linux": "pkg . --targets node18-linux-x64 --out-path dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1",
    "open": "^8.4.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "pkg": "^5.8.1"
  }
}
