{
  "name": "spending-tracker",
  "version": "1.0.0",
  "description": "Personal spending tracking application",
  "main": "server/index.js",
  "bin": {
    "spending-tracker": "server/index.js"
  },
  "pkg": {
    "scripts": "server/**/*.js",
    "assets": "client/**/*",
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ],
    "outputPath": "dist"
  },
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "package": "pkg . --out-path dist",
    "package-win": "pkg . --targets node18-win-x64 --output dist/spending-tracker-win.exe",
    "package-mac": "pkg . --targets node18-macos-x64 --output dist/spending-tracker-mac",
    "package-linux": "pkg . --targets node18-linux-x64 --output dist/spending-tracker-linux",
    "nas": "NAS_MODE=true HOST=0.0.0.0 PORT=3001 node server/index.js",
    "nas-win": "set NAS_MODE=true && set HOST=0.0.0.0 && set PORT=3001 && node server/index.js",
    "docker:build": "docker build -t spending-tracker:latest .",
    "docker:run": "docker run -p 3001:3001 -v $(pwd)/data:/app/data spending-tracker:latest",
    "docker:compose": "docker compose up -d",
    "docker:logs": "docker compose logs -f",
    "docker:stop": "docker compose stop"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "multer": "^2.0.2",
    "open": "^8.4.0",
    "sqlite3": "^5.1.6",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  }
}
